			#echo "\"background\":\"#989898\","
			echo "\"color\":\"#FFFFFF\","
			echo "\"align\":\"left\","
			echo "\"separator\":false,"
			echo "\"min_width\":55"
		echo '},'

		# Memory: ---------------------------------------------

		echo '{'
			echo "\"full_text\":\"MEM\","
			echo "\"separator_block_width\":0,"
			#echo "\"background\":\"#ffffff\","
			echo "\"color\":\"#989898\","
			#echo "\"align\":\"center\","
			echo "\"separator\":false,"
			echo "\"min_width\":30"
		echo '},'
	
