		echo '{'
			echo "\"full_text\":\"$(date +%T)\","
			echo "\"separator_block_width\":0,"
			#echo "\"background\":\"#989898\","
			echo "\"color\":\"#FFFFFF\","
			echo "\"align\":\"left\","
			echo "\"separator\":false,"
			echo "\"min_width\":65"
