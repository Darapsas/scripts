			echo "\"separator_block_width\":0,"
			#echo "\"background\":\"#ffffff\","
			echo "\"color\":\"#989898\","
			#echo "\"align\":\"center\","
			echo "\"separator\":false,"
			echo "\"min_width\":30"
		echo '},'
	
		echo '{'
			echo "\"full_text\":\"$(exec acpi -b | awk 'NR==1 { gsub(",","",$4); print substr($3,1,1) " (" $4 ")" }')\","
