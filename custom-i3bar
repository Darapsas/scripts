		echo '{'
			echo "\"full_text\":\"DRIVE\","
			echo "\"separator_block_width\":0,"
			#echo "\"background\":\"#ffffff\","
			echo "\"color\":\"#989898\","
			#echo "\"align\":\"center\","
			echo "\"separator\":false,"
			echo "\"min_width\":45"
