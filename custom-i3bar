			echo "\"color\":\"#989898\","
			#echo "\"align\":\"center\","
			echo "\"separator\":false,"
			echo "\"min_width\":45"
		echo '},'
	
		echo '{'
			echo "\"full_text\":\"$(exec sensors | grep -i package |  awk 'NR==1 { print substr($4,2,2) "Â°C" }')\","
