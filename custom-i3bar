		# Time: ---------------------------------------------

		echo '{'
			echo "\"full_text\":\"TIME\","
			echo "\"separator_block_width\":0,"
			#echo "\"background\":\"#ffffff\","
			echo "\"color\":\"#989898\","
			#echo "\"align\":\"center\","
			echo "\"separator\":false,"
